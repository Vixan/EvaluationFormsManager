@model EvaluationFormsManager.Models.FormEditVM

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Form</h2>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                        <label asp-for="StatusId" class="control-label"></label>
                        @Html.DropDownListFor(
                            model => model.StatusId,
                            Model.StatusList,
                            new { @class = "form-control selectpicker dropdown dropdown_status" })
                    </div>
                    <div class="col-md-3">
                        <label asp-for="ImportanceId" class="control-label"></label>
                        @Html.DropDownListFor(
                           model => model.ImportanceId,
                           Model.ImportanceList,
                           new { @class = "form-control selectpicker dropdown dropdown_importance" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sections" class="control-label"></label>
                <table class="table">
                    <thead class="page-header">
                        <tr class="active">
                            <th>#</th>
                            <th>Name</th>
                            <th>ModifiedBy</th>
                            <th>ModifiedDate</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var section in Model.Sections)
                        {
                            <tr>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <!-- Bootstrap Select CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/css/bootstrap-select.min.css">
    <!-- Bootstrap Select JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/js/bootstrap-select.min.js"></script>
}
